<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_menu_empty"
    tools:context=".implementation.activities.MainActivity">

    <ImageView
        android:id="@+id/txtSelectDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/difficulty_header"
        android:text="Select Difficulty"
        android:textSize="@dimen/large_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/btnLevel1"
        android:tag="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_1_click_h"
        android:background="@drawable/level1_click"
        android:onClick="goToGameActivity"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/txtSelectDifficulty"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/btnLevel2"
        android:tag="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_2_click_h"
        android:background="@drawable/level2_click"
        android:onClick="goToGameActivity"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnLevel1"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/btnLevel3"
        android:tag="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_3_click_h"
        android:background="@drawable/level3_click"
        android:onClick="goToGameActivity"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnLevel2"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/btnLevel4"
        android:tag="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_4_click_h"
        android:background="@drawable/level4_click"
        android:onClick="goToGameActivity"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnLevel3"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/btnBackToMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_click_h"
        android:background="@drawable/back_click"
        android:onClick="goToMainActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <!--<Button-->
        <!--android:id="@+id/btnDevMode"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="developer"-->
        <!--android:onClick="developerMode"-->
        <!--android:background="@color/Transparent"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"/>-->
</RelativeLayout>
