<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".implementation.activities.MainActivity">

    <TextView
        android:id="@+id/txtUpgrades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrades"
        android:textSize="@dimen/large_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/bck_village"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/txtBucketUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bucket:"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/txtCleaningStation"
        android:layout_alignEnd="@+id/txtCleaningStation" />
    <TextView
        android:id="@+id/valueBucketUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtBucketUpgrade"
        android:layout_alignRight="@+id/txtUpgrades"
        android:layout_alignEnd="@+id/txtUpgrades" />
    <TextView
        android:id="@+id/txtCleaningStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CleaningStation:"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/txtBucketUpgrade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/valueCleaningStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtCleaningStation"
        android:layout_alignRight="@+id/txtUpgrades"
        android:layout_alignEnd="@+id/txtUpgrades" />


    <Button
        android:id="@+id/btnBackToVillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:onClick="goToVillageActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
