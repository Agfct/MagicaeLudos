<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/info_vertical_margin"
    android:layout_marginTop="@dimen/info_vertical_margin"
    android:layout_marginLeft="@dimen/info_horizontal_margin"
    android:layout_marginRight="@dimen/info_horizontal_margin"
    android:layout_centerInParent="true"
    android:visibility="visible"
    android:background="@color/BLACK"
    tools:context=".implementation.activities.MainActivity">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_level_info_3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/infoParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_info_3"
        android:layout_below="@+id/infoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:id="@+id/btnMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/run"
        android:background="@drawable/run_click"
        android:onClick="startGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"/>
</RelativeLayout>
