<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    android:visibility="visible"
    tools:context=".implementation.activities.MainActivity">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/teardrop"
        android:layout_above="@+id/infoParagraph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />
    <TextView
        android:id="@+id/infoParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_info_0"
        android:layout_above="@+id/infoSource"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />
    <TextView
        android:id="@+id/infoSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_info_source_0"
        android:paddingBottom="20dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMainActivity"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/txtTotalWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="Total Water"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="8"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/txtTotalWaterCollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="Collected"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/img_cleanWaterGained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clean_water"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/intTotalWaterCollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/txtTotalWaterGained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="Gained"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnSpan="7"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/img_cleanWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clean_water"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_column="1"
            android:layout_row="2"/>
        <TextView
            android:id="@+id/intCleanWaterAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/addition1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="+"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/img_dirtyWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dirty_water"
            android:layout_column="3"
            android:layout_row="2"/>
        <TextView
            android:id="@+id/intDirtyWaterAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/multiplyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="*"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/img_purifierIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purifier_3"
            android:layout_column="5"
            android:layout_row="2"/>
        <TextView
            android:id="@+id/intDirtyWaterMultiplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 %"
            android:layout_column="5"
            android:layout_row="3"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text"
            android:text="="
            android:layout_column="6"
            android:layout_row="2"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/img_totalBucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bucket_3"
            android:layout_column="7"
            android:layout_row="2"/>
        <TextView
            android:id="@+id/intTotalWaterAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:layout_column="7"
            android:layout_row="3"
            android:layout_gravity="center_horizontal"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/btnMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_menu_click_h"
        android:background="@drawable/main_menu_click"
        android:onClick="goToMainActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageButton
        android:id="@+id/btnVillageActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/village2_click_h"
        android:background="@drawable/village2_click"
        android:onClick="goToVillageActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/infoParagraph"
        android:layout_alignEnd="@+id/infoParagraph"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageButton
        android:id="@+id/btnRun"
        android:tag="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/run_click_h"
        android:background="@drawable/run_click"
        android:onClick="goToGameActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
