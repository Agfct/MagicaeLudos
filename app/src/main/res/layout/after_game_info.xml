<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:background="@drawable/teardrop"
    tools:context=".implementation.MainActivity">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/teardrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"/>
    <TextView
        android:id="@+id/infoParagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_info_0"
        android:layout_below="@+id/infoImage"
        android:layout_alignRight="@+id/btnGameActivity"
        android:layout_alignEnd="@+id/btnGameActivity"
        android:layout_marginTop="41dp"/>
    <Button
        android:id="@+id/btnGameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Me!"
        android:onClick="goToGameActivity"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/infoParagraph"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
