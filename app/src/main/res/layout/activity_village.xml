<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bck_village"
    tools:context=".implementation.activities.MainActivity">

    <ImageView
        android:id="@+id/txtVillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/village_header"
        android:text="Village"
        android:textSize="@dimen/large_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/txtTotalWater" />
    <ImageView
        android:layout_width="match_parent"
        android:src="@color/BLACK"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_above="@+id/btnLeaveVillage"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/txtTotalWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total water:"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/btnLeaveVillage"
        android:layout_toEndOf="@+id/btnLeaveVillage"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignTop="@+id/imageView" />
    <TextView
        android:id="@+id/valueTotalWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtTotalWater"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun" />
    <TextView
        android:id="@+id/txtVillagers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Villagers:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtTotalWater"
        android:layout_alignRight="@+id/txtTotalWater"
        android:layout_alignEnd="@+id/txtTotalWater"/>
    <TextView
        android:id="@+id/valueVillagers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtVillagers"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun" />
    <TextView
        android:id="@+id/txtMostWaterInOneRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Run"
        android:textSize="@dimen/medium_text"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtVillagers"
        android:layout_alignRight="@+id/txtVillagers"
        android:layout_alignEnd="@+id/txtVillagers"/>
    <TextView
        android:id="@+id/txtMostCollectedWaterInOneRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collected:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtMostWaterInOneRun"
        android:layout_alignRight="@+id/txtMostWaterInOneRun"
        android:layout_alignEnd="@+id/txtVillagers"/>
    <TextView
        android:id="@+id/valueMostCollectedWaterInOneRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtMostCollectedWaterInOneRun"
        android:layout_toRightOf="@+id/txtMostCollectedWaterInOneRun"
        android:layout_marginLeft="50dp" />
    <TextView
        android:id="@+id/txtMostGainedWaterInOneRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gained:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtMostCollectedWaterInOneRun"
        android:layout_alignRight="@+id/txtVillagers"
        android:layout_alignEnd="@+id/txtVillagers"/>
    <TextView
        android:id="@+id/valueMostGainedWaterInOneRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtMostGainedWaterInOneRun"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun"/>
    <TextView
        android:id="@+id/txtNrOfRuns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nr of Runs:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtMostGainedWaterInOneRun"
        android:layout_alignRight="@+id/txtVillagers"
        android:layout_alignEnd="@+id/txtVillagers" />
    <TextView
        android:id="@+id/valueNrOfRuns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun"
        android:layout_alignTop="@+id/txtNrOfRuns" />
    <TextView
        android:id="@+id/txtCurrentDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Day:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtNrOfRuns"
        android:layout_alignRight="@+id/txtNrOfRuns"
        android:layout_alignEnd="@+id/txtNrOfRuns"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/valueCurrentDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtCurrentDay"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun" />

    <TextView
        android:id="@+id/txtRunsLeftToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runs Left Today:"
        android:textSize="@dimen/medium_text"
        android:layout_below="@+id/txtCurrentDay"
        android:layout_alignRight="@+id/txtVillagers"
        android:layout_alignEnd="@+id/txtVillagers" />
    <TextView
        android:id="@+id/valueRunsLeftToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/medium_text"
        android:layout_alignTop="@+id/txtRunsLeftToday"
        android:layout_alignRight="@+id/valueMostCollectedWaterInOneRun" />

    <ImageButton
        android:id="@+id/btnLeaveVillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_click_h"
        android:background="@drawable/back_click"
        android:onClick="goToMainActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <ImageButton
        android:id="@+id/btnUpgrades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upgrades_click_h"
        android:background="@drawable/upgrades_click"
        android:onClick="goToUpgradesActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/howVillageWorks"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="A villager needs 20L water every day. \nWhen a new day starts additional villagers arrives if you have enough water to support them! \nOne day is 5 runs."
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="1"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnLeaveVillage"
        android:layout_below="@+id/txtRunsLeftToday"
        android:layout_marginTop="20dp" />

</RelativeLayout>
